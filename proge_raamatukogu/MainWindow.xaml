<Window x:Class="proge_raamatukogu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proge_raamatukogu"
        mc:Ignorable="d" FontSize="16" FontFamily="Ebrima"
        Title="Rambo raamatud" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="1" 
                   FontSize="20" FontFamily="Impact" Text="Rambo raamatud"
                   Margin="0, 5, 0, 15"/>
        <Button x:Name="lisaRaamat" Content="Lisa raamat" 
                Grid.Column="1" Grid.Row="2" Margin="5, 8, 10, 8" 
                Click="lisaRaamat_Click"/>
        <Button x:Name="lisaKasutaja" Content="Lisa kasutaja" 
                Grid.Column="1" Grid.Row="3" Margin="5, 8, 10, 8" Click="lisaKasutaja_Click" 
                />
        <Button x:Name="raamatuTagastus" Content="Tagasta raamat" 
                Grid.Column="1" Grid.Row="4" Margin="5, 8, 10, 8" Click="raamatuTagastus_Click" 
               />
        <Button x:Name="raamatuLaenutus" Content="Laenuta raamat" 
                Grid.Column="1" Grid.Row="5" Margin="5, 8, 10, 8" Click="raamatuLaenutus_Click" 
                />
        <Rectangle Stroke="Black"
                   Grid.Row="2" Grid.Column="2" 
                   Grid.RowSpan="6" Grid.ColumnSpan="4"/>


    </Grid>
</Window>
